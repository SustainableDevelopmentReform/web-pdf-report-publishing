{
  "defaults": {
    "format": "A4",
    "margin": {
      "top": "20mm",
      "right": "15mm",
      "bottom": "20mm",
      "left": "15mm"
    },
    "printBackground": true,
    "preferCSSPageSize": true,
    "displayHeaderFooter": false,
    "timeout": 30000
  },
  "documents": {
    "index": {
      "format": "A4"
    },
    "inception-report": {
      "format": "A4"
    },
    "interim-report": {
      "format": "A4"
    }
  },
  "excludeFiles": [
    "_observablehq",
    "404.html",
    "_dist",
    "_import"
  ],
  "waitConditions": {
    "waitForSVGs": true,
    "waitForImages": true,
    "additionalWaitTime": 2000
  },
  "qrCode": {
    "enabled": false,
    "baseUrl": "https://your-site-url.com",
    "width": 65,
    "margin": 1,
    "errorCorrectionLevel": "M",
    "colors": {
      "dark": "#003355",
      "light": "#ffffff"
    },
    "position": {
      "class": "qr-code-margin-left",
      "title": "View Online"
    }
  }
}
